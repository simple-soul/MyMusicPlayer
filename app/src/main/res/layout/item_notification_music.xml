<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center"
              android:background="#d9d9d9"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_not_image"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1.2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/item_not_tv_title"
                    android:layout_width="0dp"
                    android:text="title"
                    android:textColor="#434343"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:layout_weight="7"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/item_not_tv_exit"
                    android:gravity="center"
                    android:textSize="26dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Ã—"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_not_tv_act"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="act"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#cccccc"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/item_not_image_previous"
                android:src="@drawable/previous"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/item_not_image_status"
                android:src="@drawable/play"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/item_not_image_next"
                android:src="@drawable/next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>